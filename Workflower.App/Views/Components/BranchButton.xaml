<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workflower.App.Views.Components.BranchButton"
             xmlns:icons="clr-namespace:Workflower.App.Views.Components"
             >
    <ContentView.Resources>
        <icons:BranchIcon x:Key="icon" />
    </ContentView.Resources>

    <HorizontalStackLayout>
        <GraphicsView Drawable="{StaticResource icon}" WidthRequest="20" HeightRequest="20" />

        <Button 
            VerticalOptions="Center"
            HorizontalOptions="Center"
            ImageSource="pencil.png"
        />

    </HorizontalStackLayout>
</ContentView>
